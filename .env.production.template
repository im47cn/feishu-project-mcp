# Feishu API Configuration
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_API_URL=https://open.feishu.cn/open-apis

# Service Configuration
CHECK_INTERVAL=900000
STORAGE_DIR=/var/lib/feishu-project-mcp/storage
LOG_DIR=/var/log/feishu-project-mcp
LOG_LEVEL=info
MAX_CONCURRENT_TASKS=10

# Production Configuration
NODE_ENV=production
DEBUG=feishu-project-mcp:error

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
CORS_ORIGINS=https://your-domain.com
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
