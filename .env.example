# Application Configuration
NODE_ENV=development
PORT=3000

# Feishu API Configuration
FEISHU_TOKEN=your_feishu_api_token_here
FEISHU_API_URL=https://open.feishu.cn/open_api/

# Task Management Configuration
CHECK_INTERVAL=900000  # 15 minutes in milliseconds
MAX_CONCURRENT_TASKS=10

# Storage Configuration
STORAGE_DIR=./storage
LOG_DIR=./logs

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
MAX_LOG_FILES=7
MAX_LOG_SIZE=10m

# Development Configuration
DEBUG=false
ENABLE_SWAGGER=true

# Test Configuration
TEST_FEISHU_TOKEN=test_token
TEST_STORAGE_DIR=./test-storage
TEST_LOG_DIR=./test-logs

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=feishu-project-mcp
DOCKER_IMAGE_TAG=latest

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds in milliseconds
HEALTH_CHECK_TIMEOUT=3000   # 3 seconds in milliseconds

# Git Configuration (for automated commits)
GIT_AUTHOR_NAME=MCP Service
GIT_AUTHOR_EMAIL=mcp-service@your-domain.com

# Comment these in production
# DEBUG=*
# NODE_OPTIONS=--inspect
